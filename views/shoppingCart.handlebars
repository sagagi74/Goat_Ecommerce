<main class="container">
  <div class="row">
    <div class="'col-10">
      <div class="row">
        <div class="col-3">
          <h3>Product and product name</h3>
        </div>
        <div class="col-2">
          <h3>&nbsp;&nbsp;&nbsp; Price</h3>
        </div>
        <div class="col-2">
          <h3>Quantity</h3>
        </div>
        <div class="col-2">
          <h3>Total Cost</h3>
        </div>
      </div>
    </div>  
  </div>
  <div class="row">
    <div class="col-10">
    {{#each data as |customer|}}
      <div class="row">
        <div class="col-2">
          <img src="{{customer.product_url}}" style="width: 100%;" alt="" />
        </div>
        <div class="col-2">
          <h3>{{customer.product_name}}</h3>
        </div>
        <div class="col-2">
          <h3>${{customer.price}}</h3>
        </div>
        <div class="col-2">
          <h3>{{customer.quantity}}</h3>
        </div>
        <div class="col-2">
          <h3>&nbsp;&nbsp;&nbsp;&nbsp;${{customer.totalCost}}</h3>
        </div>
      </div>
    {{/each}}
    </div>    
    <div class="col-2 orderSummary">
      <p class="font-weight-bold">Order Summary</p><br>
      <p>Order Subtotal: {{data.[0].subtotalPrice}}</p><br>
      <p>Tax: {{data.[0].tax}}%</p><br>
      <p>Total: ${{data.[0].finalPrice}}</p>
      <button type="button" id="backToProduct" class="btn btn-light btn-lg btn-block ">Continue Shopping</button> <br>
      <button type="button" id="transaction" class="btn btn-dark btn-lg btn-block " data-id="{{data.[0].transaction_id}}" >Buy! Buy! Buy!</button>
    </div>
  </div>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js/shoppingCart.js"></script>
