<head>
    <link rel="stylesheet" href="/css/navAndFooter.css">
</head>

<div class="wrapper">
  <div class="form-box register">
    <h2>Registration</h2>
    <form>
      <div class ="input-box">
        <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
        <input class="first-name-signup" type="text" required>
        <label>First Name</label>
      </div>
      <div class ="input-box">
        <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
        <input class="last-name-signup" type="text" required>
        <label>Last Name</label>
      </div>
      <div class ="input-box">
        <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
        <input class="email-signup" type="email" required>
        <label>Email</label>
      </div>
      <div class ="input-box">
        <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
        <input class="password-signup" type="password" required>
        <label>Password</label>
      </div>
      <button type="button" class="btn signup-form register_submit">Register</button>
      <div class="login_register">
        <p>Already have an account?<a href="/login" class="login_link"> Login</a></p>
      </div>
    </form>
  </div>
</div>

<script src="/js/signUp.js"></script>
